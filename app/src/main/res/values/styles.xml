<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NoActionBarTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.Material3.Light">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogNoActionBarTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>