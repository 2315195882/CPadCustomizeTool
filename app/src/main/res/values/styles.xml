<resources>
    <style name="NoActionBarTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Material.Light">
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="DialogNoActionBarTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">@color/red</item>
        <item name="actionBarTheme">@style/TranslucentActionBar</item>
    </style>

    <style name="TranslucentActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>